<?xml version="1.0" encoding="UTF-8"?>
<web-app 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" 
	version="3.0">
  <display-name>监管系统管理(supervise system manage)</display-name>
  <context-param>
    <param-name>webAppRootKey</param-name>
    <param-value>com.ehtsoft.supervise.web</param-value>
  </context-param>
  <context-param>
    <param-name>log4jConfigLocation</param-name>
    <param-value>classpath:META-INF/log4j.xml</param-value>
  </context-param>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>
    	classpath:META-INF/com.ehtsoft.supervise.*.appContext.xml,
    	classpath:META-INF/com.ehtsoft.sso.appContext.xml
    </param-value>
  </context-param>
  <context-param>
    <param-name>modelConfigLocation</param-name>
    <param-value>classpath:META-INF/model/*/*-model.xml</param-value>
  </context-param>
  <!-- 
  <context-param>
    <param-name>session.logout.callbak</param-name>
    <param-value>LoginService.logout</param-value>
  </context-param>
  -->
  <listener>
    <listener-class>com.ehtsoft.fw.core.config.ModelConfigLoaderListener</listener-class>
  </listener>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>

  <filter>
    <filter-name>CharacterEncodingFilter</filter-name>
    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>utf-8</param-value>
    </init-param>
    <init-param>
      <param-name>forceEncoding</param-name>
      <param-value>true</param-value>
    </init-param>
  </filter>
  
  <filter>
    <filter-name>sso</filter-name>
    <filter-class>com.ehtsoft.fw.core.sso.SingleSignOnFilter</filter-class>
    <init-param>
      <param-name>sso.client.class</param-name>
      <param-value>com.ehtsoft.fw.core.sso.SingleSignOnClient</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>sso</filter-name>
    <url-pattern>*.jsp</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>sso</filter-name>
    <url-pattern>*.html</url-pattern>
  </filter-mapping>
  
  <filter-mapping>
    <filter-name>CharacterEncodingFilter</filter-name>
    <url-pattern>/services/*</url-pattern>
  </filter-mapping>
  
  <filter-mapping>
    <filter-name>CharacterEncodingFilter</filter-name>
    <url-pattern>/json/*</url-pattern>
  </filter-mapping>
  
  <filter-mapping>
    <filter-name>CharacterEncodingFilter</filter-name>
    <url-pattern>/jasper/*</url-pattern>
  </filter-mapping>
  
  <servlet>
    <servlet-name>JsonGatewayServlet</servlet-name>
    <servlet-class>com.ehtsoft.fw.core.servlet.JsonGatewayServlet</servlet-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>utf-8</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>JsonGatewayServlet</servlet-name>
    <url-pattern>/json/*</url-pattern>
  </servlet-mapping>
  <!-- 
  <servlet>
    <servlet-name>CXF</servlet-name>
    <servlet-class>org.apache.cxf.transport.servlet.CXFServlet</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>CXF</servlet-name>
    <url-pattern>/services/*</url-pattern>
  </servlet-mapping>
  -->
  <servlet>
    <servlet-name>DownloadServlet</servlet-name>
    <servlet-class>com.ehtsoft.fw.core.servlet.DownloadServlet</servlet-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>utf-8</param-value>
    </init-param>
    <load-on-startup>3</load-on-startup>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>DownloadServlet</servlet-name>
    <url-pattern>/download/*</url-pattern>
  </servlet-mapping>
  
  <!-- file upload -->
  <servlet>
      <servlet-name>UploadServlet</servlet-name>
      <servlet-class>com.ehtsoft.fw.core.servlet.UploadServlet</servlet-class>
      <init-param>
          <param-name>file.upload.dir</param-name>
          <param-value>/opt/storage/uploadFiles</param-value>
      </init-param>
      <init-param>
          <param-name>file.upload.absolute</param-name>
          <param-value>true</param-value>
	  </init-param>
	  <init-param>
	      <param-name>file.upload.size</param-name>
	      <param-value>100M</param-value>
	  </init-param>
      <load-on-startup>2</load-on-startup>
  </servlet>
 <servlet-mapping>
    <servlet-name>UploadServlet</servlet-name>
    <url-pattern>/upload/*</url-pattern>
  </servlet-mapping>
    <!-- image browser -->
  <servlet>
	    <servlet-name>ImageServlet</servlet-name>
	    <servlet-class>com.ehtsoft.fw.core.servlet.ImageServlet</servlet-class>
	    <init-param>
	      <param-name>encoding</param-name>
	      <param-value>utf-8</param-value>
	    </init-param>
	    <load-on-startup>3</load-on-startup>
  </servlet>
  <servlet-mapping>
	    <servlet-name>ImageServlet</servlet-name>
	    <url-pattern>/image/*</url-pattern>
  </servlet-mapping>
  <servlet>
  		<servlet-name>ReadFileServlet</servlet-name>
	    <servlet-class>com.ehtsoft.common.servlet.ReadFileServlet</servlet-class>
	    <init-param>
	      <param-name>encoding</param-name>
	      <param-value>utf-8</param-value>
	    </init-param>
	    <load-on-startup>3</load-on-startup>
  </servlet>
  <servlet-mapping>
	    <servlet-name>ReadFileServlet</servlet-name>
	    <url-pattern>/read/*</url-pattern>
  </servlet-mapping>
  <!-- 
  <servlet>
      <servlet-name>JsCompressServlet</servlet-name>
      <servlet-class>com.ehtsoft.fw.core.servlet.JsCompressServlet</servlet-class>
      <init-param>
          <param-name>compress</param-name>
          <param-value>false</param-value>
      </init-param>
      <init-param>
          <param-name>compress-suffix</param-name>
          <param-value>.min</param-value>
      </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>JsCompressServlet</servlet-name>
    <url-pattern>*.js</url-pattern>
  </servlet-mapping>
  -->
  <session-config>
      <session-timeout>120</session-timeout>
  </session-config>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <error-page>
    <error-code>404</error-code>  
    <location>/404.jsp</location>
  </error-page>
</web-app>